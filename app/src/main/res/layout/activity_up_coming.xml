<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpComing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:layout_marginTop="80dp">

        <HorizontalScrollView
            android:layout_width="400dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/now"
                    android:layout_width="175dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button"
                    android:text="Now Playing"
                    android:textAlignment="center"
                    android:textColor="#e8e9ea"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="175dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button"
                    android:text="UpComing"
                    android:textAlignment="center"
                    android:textColor="#e5e5ea"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button"
                    android:text="Top Rated"
                    android:id="@+id/top1"
                    android:layout_toRightOf="@+id/textView"
                    android:textAlignment="center"
                    android:textColor="#e5e5ea"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="175dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/popular1"
                    android:textAlignment="center"
                    android:textColor="#e5e5ea"
                    android:textSize="30dp"
                    android:text="Popular"
                    android:background="@drawable/button"
                    android:layout_toRightOf="@+id/top1"/>

            </LinearLayout>

        </HorizontalScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home"
        android:layout_marginTop="10dp">

        <GridView
            android:id="@+id/mvilst1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth">
        </GridView>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Movie Time"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#e1e3e6"
        android:background="#06ddf1"/>


</RelativeLayout>